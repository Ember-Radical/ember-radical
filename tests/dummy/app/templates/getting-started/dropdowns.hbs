      {{/components.content}}
    {{/rad-dropdown}}

    {{#rad-dropdown
      Target='Right-Aligned'
      buttonStyle=true
      position='right' as |components|}}
      {{#components.content}}
        <img src='https://media.giphy.com/media/l0Y3LLQBGY9pK/giphy.gif' alt='Dr. Steve Brule winking at you'/>
      {{/components.content}}
    {{/rad-dropdown}}
  {{/code-example}}

</section>
<section>
  <h3>Properties</h3>

  <hr>

  {{#rad-tabs
    defaultTab='passedProps'
    card=true as |components|}}
    {{#components.content
      label='Passed'
      elementId='passedProps'}}
      <table class="full-width">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>autoClose</code></td>
            <td>{Boolean}</td>
            <td>false</td>
            <td>Whether the dropdown should automatically close a set time (2500ms) after the user mouses out.</td>
          </tr>
          <tr>
            <td><code>buttonStyle</code></td>
            <td>{Boolean}</td>
            <td>false</td>
            <td>Whether to style the <code>target</code> child component to look like a button</td>
          </tr>
          <tr>
            <td><code>brand</code></td>
            <td>{String}</td>
            <td>''</td>
            <td>
              <p>The brand class to use to style the <code>target</code> child component</p>
              <p class="small enums"><strong>Enums:</strong> primary, secondary</p>
            </td>
          </tr>
          <tr>
            <td><code>position</code></td>
            <td>{String}</td>
            <td>'left'</td>
            <td>
              <p>The position that the tooltip is created in relative to its anchor element.</p>
              <p class="small enums"><strong>Enums:</strong> left, right, top</p>
            </td>
          </tr>
          <tr>
            <td><code>Target</code></td>
            <td>{String}</td>
            <td>''</td>
            <td>Simple/string-only definition of the <code>target</code> child component</td>
          </tr>
          <tr>
            <td><code>Content</code></td>
            <td>{String}</td>
            <td>''</td>
            <td>Simple/string-only definition of the <code>content</code> child component</td>
          </tr>
        </tbody>
      </table>
    {{/components.content}}
    {{#components.content
      label='Yielded'}}
      <table class="u-full-width">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>components</code></td>
            <td>{Object}</td>
            <td>N/A</td>
            <td>
              <p>Child components yielded by the component</p>
              <p class="small enums"><strong>Enums:</strong> components.content, components.menu-item,
              components.target</p>
            </td>
          </tr>
          <tr>
            <td><code>show</code></td>
            <td>{Function}</td>
            <td>() => {}</td>
            <td>Closure action to show the dropdown. Example: <code>onclick=(action show)</code></td>
          </tr>
          <tr>
            <td><code>hide</code></td>
            <td>{Function}</td>
            <td>() => {}</td>
            <td>Closure action to close the dropdown. Example: <code>onclick=(action hide)</code></td>
          </tr>
          <tr>
            <td><code>hidden</code></td>
            <td>{Boolean}</td>
            <td>false</td>
            <td>Whether or not the dropdown is hidden from view.</td>
          </tr>
        </tbody>
      </table>
    {{/components.content}}
    {{#components.content
    label='RadDropdown.Target'}}
     <table class="full-width">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>ariaLabelledBy</code></td>
            <td>{String}</td>
            <td>""</td>
            <td>Designates the label to be used for the dropdown</td>
          </tr>
        </tbody>
      </table>
    {{/components.content}}
    {{#components.content
      label='RadDropdown.MenuItem'
      elementId='rad-dropdown-menu-item-props'}}
      <table class="full-width">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>click</code></td>
            <td>{Function}</td>
            <td>N/A</td>
            <td>Closure action to perform when clicking on this menu item. Will also automatically close/hide the menu.</td>
          </tr>
        </tbody>
      </table>
    {{/components.content}}

  {{/rad-tabs}}
</section>