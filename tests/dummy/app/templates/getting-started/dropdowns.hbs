    {{#components.menu-item click=(action 'customAction' 'hello')}}Menu Option Two{{/components.menu-item}}
    {{#components.menu-item click=(action 'customAction' 'howdy!')}}Menu Option Three{{/components.menu-item}}
  {{/components.content}}
{{/rad-dropdown}}

{{#rad-dropdown buttonStyle=true as |components|}}
  {{#components.target}}Custom Content{{/components.target}}
  {{#components.content}}
    <img src='http://i.giphy.com/125RIkH7IluIpy.gif'/>
  {{/components.content}}
{{/rad-dropdown}}

{{#rad-dropdown
